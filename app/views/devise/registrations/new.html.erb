<div class="form-container">
  <h1>INSCRIPTION</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                required: true,
                label: false,
                placeholder: "EMAIL",
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-input" },
                label_html: { class: "form-label" } %>
      <%= f.input :password,
                required: true,
                label: false,
                placeholder: "MOT DE PASSE",
                # hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "form-input" },
                label_html: { class: "form-label" } %>
      <%# <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="form-actions mb-4">
      <%= f.button :submit, "S'inscrire", class: "button btn-black" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>