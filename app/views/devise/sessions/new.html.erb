<div class="form-container">
  <h1>CONNEXION</h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                label: false,
                placeholder: "EMAIL",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-input" },
                label_html: { class: "form-label" } %>
      <%= f.input :password,
                label: false,
                placeholder: "MOT DE PASSE",
                required: false,
                input_html: { autocomplete: "current-password", class: "form-input" },
                label_html: { class: "form-label" } %>
      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me, id:"checkbox" %>
          <%= f.label :remember_me, label: "Se souvenir de moi" %>
        </div>
      <% end %>
    </div>
    <div class="form-actions mb-4">
      <%= f.button :submit, "Connexion", class: "button btn-black" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>