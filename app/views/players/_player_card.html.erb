<div class="w-8/12 h-80 filter drop-shadow-lg mx-auto">
  <div class="player-card hexagon bg-white w-full h-full">
    <%= link_to player_path(player) do %>
      <%= image_tag player.photo %>
      <h3><%= player.name %></h3>
      <p><%= t("activerecord.attributes.player.position_options.#{player.position}") %></p>
      <p><%= player.foot %></p>
      <p><%= player.age %></p>
    <% end %>
  </div>
</div>